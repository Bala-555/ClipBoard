<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bala555.clipboard.MainActivity">

    <TextView

        android:id="@+id/primaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:text="@string/primary_text"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/clipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/primaryText"
        android:layout_toRightOf="@+id/primaryText" />

    <TextView
        android:id="@+id/clipdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/description"
        android:layout_below="@+id/clipText"
        android:layout_toEndOf="@+id/description"
        android:layout_toRightOf="@+id/description" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/primaryText"
        android:layout_alignStart="@+id/primaryText"
        android:layout_below="@+id/primaryText"
        android:layout_margin="10dp"
        android:text="@string/description"
        android:textIsSelectable="true" />

</RelativeLayout>
